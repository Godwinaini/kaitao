$(function(){
	$('#gobtn').click(function(){
		location.href='http://www.kaitao.cn/';
	});
	
	var timeNum = 3;
	//秒速变化
	setInterval(function(){
		timeNum = timeNum -1
		$('#timer').text(timeNum);
	},1000);
	
	//3秒后转向首页
 	setTimeout(function(){
		window.location = 'http://www.kaitao.cn/';
	},3000);
});
